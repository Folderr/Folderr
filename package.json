{
  "name": "folderr",
  "version": "2.0.0D",
  "description": "A secure open source host for images, and shortened urls..",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "vue-tsc --noEmit -p src/frontend && vite build",
    "build:backend": "tsc --skipLibCheck --sourceMap",
    "build:production": "tsc --build && vite build",
    "start": "node dist/src/backend/index.js",
    "setup": "node dist/scripts/setup.js",
    "dev": "ts-node-dev src/backend/index.ts --trace-warnings",
    "test": "xo && node dist/src/backend/index.js",
    "prepare": "husky install",
    "lint": "xo src/ scripts/ vite.config.ts",
    "lint:fix": "xo --fix src/ scripts/ vite.config.ts"
  },
  "xo": {
    "extends": [
      "plugin:vue/vue3-recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "plugins": [
      "optimize-regex",
      "radar"
    ],
    "extensions": [
      ".ts",
      ".vue"
    ],
    "rules": {
      "indent": "off",
      "@typescript-eslint/indent": "off",
      "max-len": [
        "error",
        {
          "code": 100,
          "comments": 100,
          "ignoreUrls": true
        }
      ],
      "no-underscore-dangle": "error",
      "unicorn/prefer-node-protocol": "off"
    },
    "prettier": true
  },
  "engines": {
    "node": ">=12 <=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Folderr/Folderr.git"
  },
  "author": "Folderr",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Folderr/Folderr/issues"
  },
  "homepage": "https://github.com/Folderr/Folderr#readme",
  "dependencies": {
    "@fastify/cookie": "^8.0.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/helmet": "^9.1.0",
    "@fastify/multipart": "^7.1.0",
    "@fastify/rate-limit": "^7.3.0",
    "@fastify/static": "^6.5.0",
    "@headlessui/vue": "^1.6.7",
    "@heroicons/vue": "^1.0.5",
    "@iconify/icons-codicon": "^1.2.13",
    "@iconify/vue": "^3.2.1",
    "ajv": "^8.6.2",
    "argon2": "^0.28.2",
    "fastify": "^4.5.2",
    "formidable": "^1.2.2",
    "got": "^11.8.2",
    "helmet": "^4.4.1",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "middie": "^5.3.0",
    "mime-types": "^2.1.29",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "mongoose": "^5.13.13",
    "nodemailer": "^6.7.2",
    "spdy": "^4.0.2",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "vue": "^3.2.37",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@iconify/types": "^1.1.0",
    "@types/busboy": "^0.3.1",
    "@types/connect": "^3.4.35",
    "@types/formidable": "^1.2.3",
    "@types/js-yaml": "^4.0.2",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mime-types": "^2.1.0",
    "@types/moment-duration-format": "^2.2.3",
    "@types/node": "^15.14.5",
    "@types/nodemailer": "^6.4.4",
    "@types/spdy": "^3.4.5",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.16.1",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "autoprefixer": "^10.4.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-radar": "^0.2.1",
    "eslint-plugin-unicorn": "^38.0.1",
    "eslint-plugin-vue": "^7.20.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.4.5",
    "prettier": "2.3.1",
    "tailwindcss": "^3.0.7",
    "ts-node-dev": "^1.1.8",
    "vite": "^3.0.1",
    "vue-tsc": "^0.30.0",
    "xo": "^0.46.4"
  },
  "lint-staged": {
    "*.{ts,vue}": "xo --fix",
    "*.{md,yaml}": "prettier --write"
  }
}

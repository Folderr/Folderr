{
  "name": "folderr",
  "version": "2.0.0D",
  "description": "A secure open source host for images, and shortened urls..",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "first": "npm run build && dist/scripts/init-first.js",
    "start": "NODE_ENV=production node dist/src/index.js",
    "startpm2": "pm2 start --name folderr dist/src/index.js",

    "start:dev": "NODE_ENV=dev DEBUG=true node dist/src/index.js",
    "test": "xo && NODE_ENV=test node dist/src/index.js",
    "prepare": "husky install",
    "lint": "xo src/ scripts/",
    "lintfix": "xo --fix src/ scripts/"
  },
  "xo": {
    "plugins": [
      "optimize-regex",
      "radar"
    ],
    "extensions": [
      ".ts"
    ],
    "rules": {
      "indent": "off",
      "@typescript-eslint/indent": "off",
      "max-len": [
        "error",
        {
          "code": 100,
          "comments": 100,
          "ignoreUrls": true
        }
      ],
      "no-underscore-dangle": "error"
    },
    "prettier": true
  },
  "engines": {
    "node": ">=12 <=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Folderr/Folderr.git"
  },
  "author": "VoidNulll",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Folderr/Folderr/issues"
  },
  "homepage": "https://github.com/Folderr/Folderr#readme",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/formidable": "^1.0.32",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime-types": "^2.1.0",
    "@types/moment-duration-format": "^2.2.2",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^13.13.4",
    "@types/nodemailer": "^6.4.0",
    "@types/spdy": "^3.4.4",
    "@types/superagent": "^4.1.10",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "helmet": "^4.4.1",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.29",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "mongoose": "^5.11.18",
    "nodemailer": "^6.5.0",
    "rate-limiter-flexible": "^2.2.1",
    "spdy": "^4.0.2",
    "superagent": "^6.1.0",
    "typescript": "^4.2.4",
    "uuid-random": "^1.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-radar": "^0.2.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.1",
    "xo": "^0.38.2"
  },
  "lint-staged": {
    "*.ts": "xo --fix",
    "*.{md,yaml}": "prettier --write"
  }
}

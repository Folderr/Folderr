    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:8888",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\backend\\index.ts",
            "preLaunchTask": "npm: build:backend",
            "outFiles": [
                "${workspaceFolder}/dist/src/**/*.js"
            ]
        }
    ]
}